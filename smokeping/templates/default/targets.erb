*** Targets ***
probe = FPing

menu = <%= @menu['menu'] %>
title = <%= @menu['title'] %>
remark = <%= @menu['remark'] %>

<%
@targets.each do |group|
  group.each do |name, targets|
-%>
+ <%= name %>
menu = <%= name %>
title = <%= name %>

<%
    targets.each do |target|
-%>
++ <%= target['menu'] %>
probe = <%= target['probe'] %>
host = <%= target['host'] %>
title = <%= target['title'] %>
<% if target['urlformat'] %>
urlformat = <%= target['urlformat'] %>
<% end %>
<% if target['extraargs'] %>
extraargs = <%= target['extraargs'] %>
<% end %>
<%
    end
  end
end
-%>
