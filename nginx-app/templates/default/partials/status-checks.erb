    location /nginx_status {
        stub_status on;
        access_log  <%= @access_log %>;
        allow       127.0.0.1;
        deny        all;
    }

    location ~ ^/(fpm_status|fpm_ping)$ {
        include       fastcgi_params;
        fastcgi_pass  <%=@upstream%>_phpfpm;
        fastcgi_param SCRIPT_FILENAME $fastcgi_script_name;
        allow         127.0.0.1;
        deny          all;
    }
