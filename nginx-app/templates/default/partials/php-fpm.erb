location <%= @location %> {
    access_log <%=@access_log%>;
    include    <%=@nginx_config_dir%>/fastcgi_params;

    fastcgi_pass  <%=@upstream_name%>_phpfpm;
    fastcgi_index <%=@index%>;

<% if !::EasyBib.get_cluster_name(node).empty? -%>
    fastcgi_param BIB_ENV "<%=::EasyBib.get_cluster_name(node)%>";
<% end -%>

    fastcgi_param SCRIPT_FILENAME <%=@deploy_to%>/current/<%=@docroot%>/<%=@index%>;
    index         <%=@index%>;
}
