user <%=@nginx_user%>;
worker_processes auto;

error_log  /var/log/nginx/error.log error;
error_log syslog:server=unix:/dev/log error;
<% if !node.fetch('nginx-app', {}).fetch('logging',{}).fetch('address',{}).empty? -%>
error_log syslog:server=<%= @node['nginx-app']['logging']['address'] %>:<%= @node['nginx-app']['logging']['port'] %> debug;
<% end -%>

pid        /var/run/nginx.pid;


events {
    worker_connections 4096;
    multi_accept on;
    use epoll;
}

http {
    include         /etc/nginx/mime.types;
    default_type    application/octet-stream;

    access_log      off;
    log_format debug_referer_log '$http_x_forwarded_for - [$time_local] ' '"$request" $status $http_host $body_bytes_sent "$http_referer" ' '"$http_user_agent"' ;

    # fruitkid domain names are to long for 64
    server_names_hash_bucket_size 128;

    sendfile           on;
    tcp_nopush         on;
    keepalive_timeout  0;
    tcp_nodelay        on;
    gzip               on;

    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;
}
