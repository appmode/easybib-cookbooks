[<%= @pool_name %>]

listen = <%= @socket_dir %>/<%= @pool_name %>
listen.backlog = -1

listen.owner = <%= @user %>
listen.group = <%= @group %>
listen.mode = 0666

user = <%= @user %>
group = <%= @group %>

pm = dynamic
pm.max_children = 100
pm.start_servers = 30
pm.min_spare_servers = 10
pm.max_spare_servers = 100
pm.max_requests = 500
pm.status_path = /fpm_status_<%= @pool_name %>

ping.path = /fpm_ping_<%= @pool_name %>
ping.response = p0ng

;request_terminate_timeout = 0
request_slowlog_timeout = <%= @slowlog_timeout %>

slowlog = <%= @slowlog %>

catch_workers_output=1
